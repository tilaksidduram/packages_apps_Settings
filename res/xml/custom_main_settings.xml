<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/custom_settings_title" >

    <PreferenceCategory
        android:title="@string/custom_cat_title">

    <PreferenceScreen
            android:id="@+id/recents_settings"
            android:fragment="com.android.settings.custom.RecentsSettings"
            android:title="@string/recents_settings_title"
            android:icon="@drawable/ic_xd_recents"
            />       
                
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/custom_cat_gesture">

    <!-- Gesture anywhere -->
    <PreferenceScreen
         android:key="gesture_anywhere"
         android:fragment="com.android.settings.temasek.gestureanywhere.GestureAnywhereSettings"
         android:title="@string/gesture_anywhere_title"
	 android:icon="@drawable/ic_gestureanywhere" />

    <!-- App sidebar -->
    <PreferenceScreen
         android:key="app_sidebar"
         android:fragment="com.android.settings.temasek.AppSidebar"
         android:title="@string/app_sidebar_title"
	 android:icon="@drawable/ic_appsidebar" />

    <!-- App circle bar -->
    <PreferenceScreen
         android:key="app_circle_bar"
         android:fragment="com.android.settings.temasek.AppCircleBar"
         android:title="@string/app_circle_bar_title"
	 android:icon="@drawable/ic_appcirclebar" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/custom_cat_animation">

    <!-- Screen and animations -->
    <PreferenceScreen
         android:key="screen_and_animations"
         android:fragment="com.android.settings.temasek.ScreenAndAnimations"
         android:title="@string/screen_and_animations_title"
	 android:icon="@drawable/ic_animation" />

    </PreferenceCategory>

</PreferenceScreen>
