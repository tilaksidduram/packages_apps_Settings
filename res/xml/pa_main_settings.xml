<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/pa_settings_title" >

    <PreferenceCategory
        android:key="gesture_cat"
        android:title="@string/gesture_cat" >

    <!-- Circle app bar -->
    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.aicp.AppCircleBar"
        android:title="@string/app_circle_bar_title"/>

    <!-- App sidebar -->
    <PreferenceScreen
         android:key="app_sidebar"
         android:fragment="com.android.settings.temasek.AppSidebar"
         android:title="@string/app_sidebar_title"/>

    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.aicp.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="misc_cat"
        android:title="@string/misc_cat" >

    <!-- Wakelock blocker -->
    <PreferenceScreen
        android:key="wakelock_blocker"
        android:fragment="com.android.settings.aicp.WakeLockBlocker"
        android:title="@string/wakelock_blocker_title" />

    <!-- Clock widget -->
    <PreferenceScreen
         android:key="lock_clock"
         android:fragment="com.android.settings.temasek.LockClock"
         android:title="@string/lock_clock_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_cat"
        android:title="@string/lockscreen_cat" >

    <!-- Custom Lockscreen -->
    <PreferenceScreen
        android:key="lockscreen_paranoid"
        android:fragment="com.android.settings.paranoid.LockScreenSettings"
        android:title="@string/lockscreen_title" />

    </PreferenceCategory>

</PreferenceScreen>
