<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/pa_settings_statusbar_title"
    android:key="statusbar_settings"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <PreferenceCategory
	android:title="@string/pa_settings_statusbar_title">

    <CheckBoxPreference
	android:title="@string/status_bar_notif_count_title"
	android:summary="@string/status_bar_notif_count_summary"
	android:icon="@drawable/ic_pa_notification"
	android:key="status_bar_notif_count"
	android:defaultValue="false" />

    <CheckBoxPreference
	android:key="status_bar_brightness_control"
	android:title="@string/status_bar_toggle_brightness"
	android:icon="@drawable/ic_pa_brightness"
	android:summary="@string/status_bar_toggle_brightness_summary"
	android:defaultValue="false" />

    <PreferenceScreen
	android:fragment="com.android.settings.slim.StatusBarClockStyle"
	android:key="clock_style_pref"
	android:icon="@drawable/ic_pa_date_time"
	android:title="@string/status_bar_clock" />

    <CheckBoxPreference
	android:key="custom_status_bar_header"
	android:title="@string/custom_statusbar_header_title"
	android:summary="@string/custom_statusbar_header_summary"
	android:icon="@drawable/ic_pa_statusbar"
	android:defaultValue="false" />

    <CheckBoxPreference
	android:key="force_expanded_notifications"
	android:title="@string/force_expanded_notifications_title"
	android:summary="@string/force_expanded_notifications_summary"
	android:icon="@drawable/ic_pa_notification"
	android:persistent="false" />

    <com.android.settings.AOSPAL.CustomCarrier
	android:key="notification_custom_carrier_label"
	android:title="@string/notification_custom_carrier_label_title"
	android:dialogTitle="@string/notification_custom_carrier_label_title"
	android:positiveButtonText="@string/wifi_save"
	android:negativeButtonText="@string/wifi_cancel"
	android:selectAllOnFocus="true"
	android:imeOptions="actionDone"
	android:inputType="textNoSuggestions"
	android:persistent="false" />

   </PreferenceCategory>

    <!-- Network traffic meter -->
    <PreferenceCategory
	android:key="category_network_traffic"
	android:title="@string/network_traffic_title">

    <CheckBoxPreference
	android:key="status_bar_network_activity"
	android:title="@string/show_activity_indicators_on_status_bar_title"
	android:summary="@string/show_activity_indicators_on_status_bar_summary"
	android:defaultValue="false" />

   <ListPreference
	android:key="network_traffic_state"
	android:title="@string/show_network_traffic_state"
	android:entries="@array/show_network_traffic_state_entries"
	android:entryValues="@array/show_network_traffic_state_values"
	android:persistent="false" />

   <ListPreference
	android:key="network_traffic_unit"
	android:title="@string/show_network_traffic_unit"
	android:entries="@array/show_network_traffic_unit_entries"
	android:entryValues="@array/show_network_traffic_unit_values"
	android:persistent="false" />

   <ListPreference
	android:key="network_traffic_period"
	android:title="@string/show_network_traffic_frequency"
	android:entries="@array/show_network_traffic_frequency_entries"
	android:entryValues="@array/show_network_traffic_frequency_values"
	android:persistent="false" />

   </PreferenceCategory>

</PreferenceScreen>
