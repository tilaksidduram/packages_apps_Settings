<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/more_device_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
	 android:title="@string/propmodder_title">

     <Preference
         android:key="buildprop_modder"
         android:title="@string/propmodder_title"
	 android:icon="@drawable/ic_dt_buildprop"
         android:fragment="com.android.settings.cyanogenmod.PropModder"/>

    </PreferenceCategory>

    <PreferenceCategory
	android:title="@string/lockscreen_wallpaper_category_title">

    <CheckBoxPreference
        android:key="lockscreen_wallpaper"
	android:icon="@drawable/ic_pa_lockscreen"
        android:title="@string/lockscreen_wallpaper" />

    <Preference
        android:key="select_lockscreen_wallpaper"
        android:title="@string/select_wallpaper" />

    </PreferenceCategory>

    <PreferenceCategory
	android:title="@string/voice_tts_title">

    <PreferenceScreen
        android:key="interface_voice_tts"
        android:fragment="com.android.settings.cyanogenmod.TtsNotification"
	android:icon="@drawable/ic_pa_drivingmode"
        android:title="@string/voice_tts_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="display_calibration_category"
        android:title="@string/display_calibration_title" >

       <com.android.settings.hardware.DisplayColor
                android:key="color_calibration"
                android:title="@string/color_calibration_title"
                android:dialogTitle="@string/color_calibration_title"
                android:summary="@string/color_calibration_summary"
                android:persistent="false" />

        <com.android.settings.hardware.DisplayGamma
                android:key="gamma_tuning"
                android:title="@string/gamma_tuning_title_head"
                android:dialogTitle="@string/gamma_tuning_title_head"
                android:summary="@string/gamma_tuning_summary_head"
                android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sensors_motors_category"
        android:title="@string/sensors_motors_title" >

        <com.android.settings.hardware.VibratorIntensity
            android:key="vibration_intensity"
            android:title="@string/vibrator_intensity_title"
            android:dialogTitle="@string/vibrator_intensity_title"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/headset_category_title" >

        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="headset_connect_player"
            android:title="@string/headset_connect_player_title"
            android:icon="@drawable/ic_pa_headset"
            android:summary="@string/headset_connect_player_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <!-- Device Specific Touchscreen gestures -->
    <Preference
        android:key="touch_screen_gesture_settings">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_TOUCHSCREEN_GESTURE_SETTINGS"
            android:targetPackage="com.cyanogenmod.settings.device"
            android:targetClass="com.cyanogenmod.settings.device.TouchscreenGestureSettings" />
    </Preference>

    <PreferenceCategory
        android:title="@string/gesture_category_title" >

        <CheckBoxPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:icon="@drawable/ic_pa_powermenu"
            android:summary="@string/double_tap_to_sleep_summary"
            android:defaultValue="false" />

         <PreferenceScreen
            android:key="gesture_anywhere"
            android:fragment="com.android.settings.chameleonos.labs.gestureanywhere.GestureAnywhereSettings"
            android:icon="@drawable/ic_dt_gesture_anywhere"
            android:title="@string/gesture_anywhere_title" />

    </PreferenceCategory>

    <!-- Notification drawer -->
    <PreferenceCategory
            android:key="category_notification_drawer"
            android:title="@string/notification_drawer_category_title">

    <CheckBoxPreference
            android:title="@string/notification_count_title"
            android:summary="@string/notification_count_summary"
            android:icon="@drawable/ic_pa_notification"
            android:key="status_bar_notif_count"
            android:defaultValue="true" />

    <CheckBoxPreference
            android:key="force_expanded_notifications"
            android:title="@string/force_expanded_notifications_title"
            android:summary="@string/force_expanded_notifications_summary"
            android:icon="@drawable/ic_pa_notification"
            android:persistent="false" />

    <com.android.settings.AOSPAL.CustomCarrier
            android:key="notification_custom_carrier_label"
            android:title="@string/notification_custom_carrier_label_title"
            android:dialogTitle="@string/notification_custom_carrier_label_title"
            android:positiveButtonText="@string/wifi_save"
            android:negativeButtonText="@string/wifi_cancel"
            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:persistent="false" />

    <CheckBoxPreference
            android:key="custom_status_bar_header"
            android:title="@string/custom_statusbar_header_title"
            android:summary="@string/custom_statusbar_header_summary"
            android:icon="@drawable/ic_pa_statusbar"
            android:defaultValue="false" />

   </PreferenceCategory>

   <PreferenceCategory
	android:title="@string/status_bar_category_title">

    <CheckBoxPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:icon="@drawable/ic_pa_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />

    <PreferenceScreen
            android:fragment="com.android.settings.slim.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:icon="@drawable/ic_pa_date_time"
            android:title="@string/status_bar_clock" />

   </PreferenceCategory>

    <PreferenceCategory
         android:title="@string/navigation_bar">

         <CheckBoxPreference
            android:key="enable_nav_bar"
            android:title="@string/navigation_bar"
            android:icon="@drawable/ic_pa_navbar"
            android:summary="@string/navigation_bar_summary"
            android:defaultValue="true" />

         <SeekBarPreference
             android:key="navigation_bar_height"
             android:title="@string/navigation_bar_height"
            android:icon="@drawable/ic_pa_navbar_dimen"
             android:max="100"
             android:defaultValue="100" /> 

   </PreferenceCategory>

</PreferenceScreen>
