<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/more_device_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
	android:title="@string/pa_settings_userinterface_title">

    <PreferenceScreen
        android:fragment="com.android.settings.paranoid.NotificationDrawerQsSettings"
        android:key="notification_drawer_qs_settings"
	android:icon="@drawable/ic_pa_notification"
        android:title="@string/pa_settings_notification_title"/>

    <PreferenceScreen
        android:fragment="com.android.settings.AOSPAL.LockscreenOptions"
        android:key="keyguard_style"
	android:icon="@drawable/ic_pa_lockscreen"
        android:title="@string/pa_settings_lockscreen_title"/>

    <PreferenceScreen
        android:fragment="com.android.settings.paranoid.StatusBarSettings"
        android:title="@string/pa_settings_statusbar_title"
	android:key="statusbar_settings"
	android:icon="@drawable/ic_pa_statusbar"/>

    <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
	android:key="headset_connect_player"
	android:title="@string/headset_connect_player_title"
	android:icon="@drawable/ic_pa_headset"
	android:summary="@string/headset_connect_player_summary"
	android:defaultValue="false" />

    <CheckBoxPreference
	android:key="double_tap_sleep_gesture"
	android:title="@string/double_tap_to_sleep_title"
	android:icon="@drawable/ic_pa_powermenu"
	android:summary="@string/double_tap_to_sleep_summary"
	android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
	android:title="@string/pa_settings_system_title">

    <PreferenceScreen
        android:fragment="com.android.settings.AOSPAL.AnimationSettings"
        android:key="animation_settings"
	android:icon="@drawable/ic_pa_animations"
        android:title="@string/interface_animation_title"/>

     <CheckBoxPreference
	android:key="ram_usage_bar"
	android:icon="@drawable/ic_pa_recents"
	android:title="@string/ram_bar_title"
	android:summary="@string/ram_bar_summary"
	android:defaultValue="true" />

     <CheckBoxPreference
	android:key="recent_menu_clear_all"
	android:title="@string/show_recent_clear_all_button_title"
	android:summary="@string/show_recent_clear_all_button_summary"
	android:defaultValue="true" />

     <ListPreference
	android:key="recent_menu_clear_all_location"
	android:title="@string/recent_clear_all_button_location_title"
	android:summary="@string/recent_clear_all_button_location_summary"
	android:entries="@array/recent_clear_all_button_location_entries"
	android:entryValues="@array/recent_clear_all_button_location_values"
	android:defaultValue="2"
	android:dependency="recent_menu_clear_all" />

    <PreferenceScreen
        android:key="interface_voice_tts"
        android:fragment="com.android.settings.cyanogenmod.TtsNotification"
	android:icon="@drawable/ic_pa_drivingmode"
        android:title="@string/voice_tts_title" />

      <PreferenceScreen
	android:id="@+id/wakelock_blocker"
	android:layout="@layout/preference_wakelockblocker"
	android:title="@string/wakelock_blocker"
	android:fragment="com.android.settings.du.WakeLockBlocker" />

      <PreferenceScreen
	android:id="@+id/screen_state_service"
	android:layout="@layout/preference_suspend"
	android:title="@string/screen_state_toggles_title"
	android:fragment="com.android.settings.du.ScreenStateToggles" />

    </PreferenceCategory>

    <PreferenceCategory
	android:title="@string/pa_settings_misc_title">

     <PreferenceScreen
	android:key="gesture_anywhere"
	android:fragment="com.android.settings.chameleonos.labs.gestureanywhere.GestureAnywhereSettings"
	android:icon="@drawable/ic_dt_gesture_anywhere"
	android:title="@string/gesture_anywhere_title" />

     <Preference
	android:key="buildprop_modder"
	android:title="@string/propmodder_title"
	android:icon="@drawable/ic_dt_buildprop"
	android:layout="@layout/preference_buildprop"
	android:fragment="com.android.settings.cyanogenmod.PropModder"/>

     <PreferenceScreen
	android:id="@+id/system_app_remover"
	android:icon="@drawable/ic_settings_slim_sizer"
	android:title="@string/system_app_remover"
	android:layout="@layout/preference_systemappremover"
	android:fragment="com.android.settings.du.SystemappRemover" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="display_calibration_category"
        android:title="@string/display_calibration_title" >

       <com.android.settings.hardware.DisplayColor
                android:key="color_calibration"
                android:title="@string/color_calibration_title"
                android:dialogTitle="@string/color_calibration_title"
                android:summary="@string/color_calibration_summary"
                android:persistent="false" />

        <com.android.settings.hardware.DisplayGamma
                android:key="gamma_tuning"
                android:title="@string/gamma_tuning_title_head"
                android:dialogTitle="@string/gamma_tuning_title_head"
                android:summary="@string/gamma_tuning_summary_head"
                android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="sensors_motors_category"
        android:title="@string/sensors_motors_title" >

        <com.android.settings.hardware.VibratorIntensity
            android:key="vibration_intensity"
            android:title="@string/vibrator_intensity_title"
            android:dialogTitle="@string/vibrator_intensity_title"
            android:persistent="false" />

    </PreferenceCategory>

    <!-- Device Specific Touchscreen gestures -->
    <Preference
        android:key="touch_screen_gesture_settings">
        <intent
            android:action="com.cyanogenmod.action.LAUNCH_TOUCHSCREEN_GESTURE_SETTINGS"
            android:targetPackage="com.cyanogenmod.settings.device"
            android:targetClass="com.cyanogenmod.settings.device.TouchscreenGestureSettings" />
    </Preference>

    <PreferenceCategory
         android:title="@string/navigation_bar"
         android:key="navigation_bar">

         <CheckBoxPreference
            android:key="enable_nav_bar"
            android:title="@string/navigation_bar"
            android:icon="@drawable/ic_pa_navbar"
            android:summary="@string/navigation_bar_summary"
            android:defaultValue="true" />

         <SeekBarPreference
            android:key="navigation_bar_height"
            android:title="@string/navigation_bar_height"
            android:icon="@drawable/ic_pa_navbar_dimen"
            android:max="100"
            android:defaultValue="100"
	    android:dependency="enable_nav_bar" />

         <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="navigation_bar_left"
            android:title="@string/navigation_bar_left_title"
            android:icon="@drawable/ic_pa_navbar"
            android:summary="@string/navigation_bar_left_summary"
            android:defaultValue="false" />

   </PreferenceCategory>

</PreferenceScreen>
